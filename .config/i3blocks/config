# Bandwidth IN/OUT
[bandwidth]
color=#10A040
interval=5
separator=true

# Network interface monitoring
[iface]
#instance=wlan0
color=#00FF00
interval=10
separator=true

# CPU usage
#[cpu_usage]
#label=CPU
#interval=10
#separator=true

# Date Time
[time]
color=#FFA000
interval=5
command=date '+%Y-%m-%d' 

[time]
color=#FF0000
command=date '+%H:%M:%S'
interval=1

# Generic media player support
#
# This displays "ARTIST - SONG" if a music is playing.
# Supported players are: spotify, vlc, audacious, xmms2, mplayer, and others.
