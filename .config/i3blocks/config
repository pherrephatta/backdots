# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
command=/usr/lib/i3blocks/i3blocks-contrib/$BLOCK_NAME/$BLOCK_NAME
separator_block_width=15
markup=none

# Keyboard layout
[key_layout]
label=⚟
interval=30

# Volume indicator
[volume]
color=#9010E0
label=VOL
label=♪ 
instance=Master
#instance=PCM
interval=once
signal=10

# Memory usage
# The type defaults to "mem" if the instance is not specified.
[memory]
#color=#400B70
color=#4010F0
label=MEM 
separator=true
interval=30

